style

  .title_text { 
    font-size:30px;
    line-height: 36px;
    border:0px;
  }

  .untitled {
    color: #eeeeee;
  }

  .titlebar { 
    margin-top: 10px;
    margin-bottom: 10px;
  }
  
  .viewText { 
    border-radius: 3px;
    margin-bottom: 18px;
    padding: 10px;
  }

  .logic-comp-tab .viewText,
  .logic-comp-carousel .viewText,
  .logic-comp-nav-list .viewText,
  .logic-comp-table .viewText,
  .logic-comp-accordion .viewText,
  .logic-comp-pagination .viewText,
  .logic-comp-hero-unit .viewText,
  .logic-comp-alert .viewText,
  .logic-comp-code .viewText,
  .logic-comp-breadcrumb .viewText,
  .logic-comp-page-header .viewText,
  .logic-comp-stack .viewText
   { 
    padding:0px;
  }

  .logic-comp-page-header .viewText { 
    padding-left:10px;
    padding-right:10px;
  }
  
  .logic-comp-tab .viewText
  ,.logic-comp-accordion .viewText
  ,.logic-comp-progress .viewText
  ,.logic-comp-nav-list .viewText
  ,.logic-comp-carousel .viewText
  ,.logic-comp-page-header .viewText
  ,.logic-comp-pagination .viewText { 
    background:none;
  }
  
  .btn-mini {
      padding: 1px;
  }

  .btn-toolbar {
      margin-top: 2px;
      margin-bottom: 0px;
  }

  .logic-drop-active-side {
      background: red;
  }

  .logic-drop-active-middle {
      background: yellow;
  }
  
  .modal { 
    margin: 0px;
    top: 0px;
    left: 0px;
  }

  .modal-header .nav-pills > .active > a,.modal-header .nav-pills > .active > a:hover {
    background-color: #333 ;
  }
 
  .modal-body { 
    max-height: none;
  }
  
  .mdoal-body label.checkbox { 
    display: inline-block; 
  }
  
  .modal-header-menu { 
    display:inline-block;
    margin-bottom: -5px;
  }
  
  .modal-header-title { 
    display:inline-block;
    margin-right: 20px;
  }  
  
  .select_align {
      margin-top: 5px;
      margin-left: 0;
      list-style: none;
      cursor: pointer;
      overflow: hidden; /* clear floats */
  }

  .select_toy {
      margin-top: 5px;
      margin-left: 10px;
      list-style: none;
      cursor: pointer;
      overflow: hidden; /* clear floats */
  }

  .toy {
      display: inline;
      float: left;
  }

  .logic-comp-box.select_box .viewText
  ,.select_box .viewText {
      border:0px;
  }
  
  .select_box .viewText {
      border:1px dashed black;
  }  
  
  .resizable-helper {
      border: 1px dashed #cccccc;
  }  

  .select_box_container {
      border-top: 1px dashed #cccccc;
      border-bottom: 1px dashed #cccccc;
  }  

  .list-row.alert {
      padding: 2px;
      margin-bottom: 4px;
  }

  .column.alert {
      padding: 2px;
      margin-bottom: 4px;
  }
  
  .wrapper { 
    padding-left: 20px; 
    padding-right: 20px; 
    background: url(/logic/themes/wash-white-30.png);
  }
  
  .settings-label {
    background-color: #333;
    color:white;
    font-weight:bold;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;    
    padding:5px;
  }
  
  .form-horizontal .control-group {
    margin-bottom: 10px;
  }  
  

