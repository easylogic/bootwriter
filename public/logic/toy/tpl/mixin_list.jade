mixin input_text(value, name, title)
  input.span8(type='text', value= value, class= name, placeholder="Insert " + title)

mixin title(value, name)
  input.span8.title(type='text', value= value, placeholder="Insert " + (name ? name : 'Title'))
  
mixin text(value, name, rows)
  - rows = rows ? rows : 10;
  textarea.span8.text(rows= rows, placeholder= "Insert " + (name ? name :'Content'))!= value
  
mixin select(name, list, value, title)
  select(class= name, data-placeholder= title, style='margin-bottom:10px;')
    option(value='')
    each list_value in list
      - if (list_value == value)
        option(value= list_value, selected='selected')= list_value
      - else 
        option(value= list_value)= list_value  
  
mixin tag(value)
  input.span8.tag(type='text', value= value.join(","), placeholder="Insert Tag")  
        
                
mixin checkbox(name, value, title)
  label.checkbox
    if value 
      input(class= name, type='checkbox', checked='checked', style='display:inline-block')
    else                              
      input(class= name, type='checkbox', style='display:inline-block')                
    != title
